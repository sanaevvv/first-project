<h1 class="new_task">タスクの新規登録</h1>
<%= link_to '一覧ページへ', tasks_path, class: "index" %>

<% if @task.errors.present? %>
    <ul id="error_explanation">
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model: @task, local: true do |f| %>
     <p><%= f.label :name, "名称" %></p>
     <p><%= f.text_field :name, id: 'task_name', class: "input1 input"%></p>
     <p><%= f.label :description, "詳しい説明" %></p>
     <p><%= f.text_area :description, id: 'task_desctiption', class: "input2 input" %></p>

     <%= f.submit "送信する" %>
<% end %>

